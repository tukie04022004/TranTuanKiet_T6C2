
@{
    ViewBag.Title = "ThemCD";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f4f8;
        margin: 0;
    }

    #container {
        width: 80%;
        margin: 20px auto;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        font-size: 28px;
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    input[type="text"], textarea, select, input[type="file"] {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        font-size: 16px;
        transition: border-color 0.3s ease-in-out;
    }

        input[type="text"]:focus, textarea:focus, select:focus, input[type="file"]:focus {
            border-color: #007bff;
            outline: none;
        }

    textarea {
        resize: vertical;
        min-height: 120px;
    }

    input[type="submit"] {
        width: 100%;
        padding: 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
        margin-top: 20px;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    #imagePreview {
        display: none;
        margin-top: 10px;
        max-width: 200px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .file-input-label {
        display: block;
        padding: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: border-color 0.3s ease-in-out;
    }

        .file-input-label:hover {
            border-color: #007bff;
        }

    .select-container {
        margin-bottom: 20px;
    }

        .select-container select {
            padding: 12px;
            font-size: 16px;
        }
    .error-message {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%; /* Hoặc độ rộng mong muốn */
        max-width: 500px; /* Độ rộng tối đa của thông báo */
        padding: 15px; /* Thêm khoảng cách bên trong */
        border-radius: 5px; /* Bo góc */
        z-index: 1000; /* Để đảm bảo thông báo nằm trên các nội dung khác */
    }
    .alert {
        /* Sử dụng bootstrap alert styles */
        margin: 0; /* Để thông báo không có khoảng cách bên ngoài */
        font-weight: bold; /* Đậm chữ */
    }
</style>
@if (ViewBag.ErrorMessage != null)
{
<div class="alert alert-danger text-center error-message">
    @ViewBag.ErrorMessage
</div>}
<div id="container">
    <form action="~/DanhMuc/ThemCD" method="post" enctype="multipart/form-data">
        <h2>Thêm chủ đề mới</h2>
        
        <label for="tensach">Tên chủ đề:</label>
        <input type="text" id="tensach" name="tenchude" required />
        <input type="submit" value="Thêm sách" />
    </form>
</div>



@{
    ViewBag.Title = "Chi tiết sản phẩm";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #f5f5f5;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        margin-left: 50px;
    }

    .breadcrumb {
        margin-bottom: 15px;
        font-size: 14px;
    }

        .breadcrumb a {
            text-decoration: none;
            color: #007bff;
        }

    .product-detail {
        display: flex;
    }

    .product-image {
        flex: 1;
        margin-right: 30px;
    }

        .product-image img {
            width: 100%;
            height: auto;
            border: 1px solid #ccc;
        }

    .thumbnails {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

        .thumbnails img {
            width: 70px;
            height: auto;
            border: 1px solid #ccc;
        }

    .product-info {
        flex: 2;
    }

        .product-info h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .product-info p {
            margin-bottom: 5px;
        }

    .price-section {
        margin: 15px 0;
        font-size: 22px;
    }

    .current-price {
        color: #e74c3c;
        font-weight: bold;
        margin-right: 10px;
    }

    .old-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 10px;
    }

    .discount {
        color: #e74c3c;
    }

    .rating {
        margin-bottom: 15px;
        color: #f39c12;
    }

    .actions {
        margin-bottom: 20px;
    }

    .add-to-cart, .buy-now {
        background-color: #e74c3c;
        color: white;
        padding: 10px 20px;
        margin-right: 10px;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

        .add-to-cart:hover, .buy-now:hover {
            background-color: #c0392b;
        }

    .quantity-selector {
        margin-bottom: 20px;
    }

        .quantity-selector input {
            width: 50px;
            padding: 5px;
            font-size: 16px;
            margin-left: 5px;
        }

    .shipping-info {
        margin-bottom: 15px;
        font-size: 14px;
        color: #666;
    }

    .promotions p {
        font-weight: bold;
    }

    .promotions button {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 8px 10px;
        margin-right: 10px;
        cursor: pointer;
        font-size: 14px;
    }

        .promotions button:hover {
            background-color: #c0392b;
        }

    .product-details {
        margin-top: 40px;
    }

        .product-details h2 {
            font-size: 22px;
            margin-bottom: 10px;
        }

        .product-details table {
            width: 100%;
            border-collapse: collapse;
        }

        .product-details td {
            padding: 8px 0;
            border-bottom: 1px solid #ddd;
        }

            .product-details td:first-child {
                font-weight: bold;
                width: 200px;
            }

    .product-description {
        margin-top: 30px;
    }

        .product-description h2 {
            font-size: 22px;
            margin-bottom: 10px;
        }

        .product-description h3 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .product-description p {
            font-size: 16px;
            color: #333;
            line-height: 1.6;
        }

    .discount {
        background-color: #ff4757;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 50px;
        margin-left: 10px;
        vertical-align: middle;
    }

    /* Update the Quantity Selector */
    .quantity-selector {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .quantity-selector label {
            font-size: 16px;
            margin-right: 10px;
            font-weight: bold;
        }

    .quantity-box {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .qty-btn {
        background-color: white;
        border: none;
        padding: 10px;
        font-size: 18px;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-right: 1px solid #ccc;
    }

        .qty-btn.plus {
            border-left: 1px solid #ccc;
        }

        .qty-btn:active {
            background-color: #f1f1f1;
        }

        .qty-btn:hover {
            background-color: #eaeaea;
        }

    .quantity-box input {
        text-align: center;
        width: 40px;
        height: 40px;
        border: none;
        font-size: 16px;
        color: #e74c3c;
        font-weight: bold;
        pointer-events: none;
    }

        .quantity-box input:focus {
            outline: none;
        }
</style>
<div class="container">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb">
        <a href="#">Sách Tiếng Việt</a> >
        <a href="#">Văn Học</a> >
        <a href="#">Tiểu Thuyết</a>
    </nav>

    <!-- Product Detail Section -->
    <div class="product-detail">
        <!-- Product Image -->
        <div class="product-image">
            <img src="~/Hinh/@ViewBag.list[0][5]" alt="Product Image">

        </div>

        <!-- Product Information -->
        <div class="product-info">
            <h1>@ViewBag.list[0][1]</h1>
            <!-- Price and Discount -->
            <div class="price-section">
                <span class="current-price">@String.Format("{0:N0} VNĐ", Convert.ToDecimal(ViewBag.list[0][3]))</span>
                <span class="discount">-20%</span>
            </div>

            <!-- Rating -->
            <div class="rating">
                <span>★ ★ ★ ★ ★ (0 đánh giá)</span>
            </div>

            <!-- Add to Cart and Buy Now -->
            <div class="actions">
                <button class="add-to-cart">Thêm vào giỏ hàng</button>
                <button class="buy-now">Mua ngay</button>
            </div>

            <div class="quantity-selector">
                <label for="quantity">Số Lượng:</label>
                <div class="quantity-box">
                    <button type="button" class="qty-btn minus">-</button>
                    <input type="text" id="quantity" name="quantity" value="1" min="1" readonly>
                    <button type="button" class="qty-btn plus">+</button>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="shipping-info">
                <p>Giao hàng đến Phường Bến Nghé, Quận 1, Hồ Chí Minh</p>
                <p>Giao hàng tiêu chuẩn - Dự kiến giao Thứ hai - 23/09</p>
            </div>

            <!-- Promotions -->
            <div class="promotions">
                <p>Ưu đãi liên quan:</p>
                <button>Mã giảm 10k</button>
                <button>Mã giảm 25k</button>
                <button>ShopeePay giảm 5%</button>
                <button>VNPay giảm 5k</button>
            </div>
        </div>
    </div>

    <!-- Product Information Section -->
   
    <!-- Product Description Section -->
    <div class="product-description">
        <h2>Mô tả sản phẩm</h2>
        <p>@ViewBag.list[0][4]</p>
    </div>
</div>
<script>
    document.querySelector('.minus').addEventListener('click', function () {
        let quantityInput = document.querySelector('#quantity');
        let currentValue = parseInt(quantityInput.value);
        if (currentValue > 1) {
            quantityInput.value = currentValue - 1;
        }
    });

    document.querySelector('.plus').addEventListener('click', function () {
        let quantityInput = document.querySelector('#quantity');
        let currentValue = parseInt(quantityInput.value);
        quantityInput.value = currentValue + 1;
    });
</script>



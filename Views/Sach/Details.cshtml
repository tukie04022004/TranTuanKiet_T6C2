
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #f5f5f5;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
    }

    .breadcrumb {
        margin-bottom: 15px;
        font-size: 14px;
    }

        .breadcrumb a {
            text-decoration: none;
            color: #007bff;
        }

    .product-detail {
        display: flex;
        margin-bottom: 30px;
    }

    .product-image {
        flex: 1;
        margin-right: 30px;
    }

        .product-image img {
            width: 100%;
            height: auto;
            border: 1px solid #ccc;
        }

    .product-info {
        flex: 2;
    }

        .product-info h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

    .info-section {
        margin-bottom: 15px; /* Spacing between sections */
    }

    .price-section {
        font-size: 22px;
        margin-bottom: 20px;
    }

    .current-price {
        color: #e74c3c;
        font-weight: bold;
        margin-right: 10px;
    }

    .actions {
        margin-bottom: 20px;
    }

    .remove, .edit {
        background-color: #e67e22; /* Orange color */
        color: white;
        padding: 10px 20px;
        margin-right: 10px;
        border: none;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px; /* Rounded corners */
    }

        .remove:hover, .edit:hover {
            background-color: #d35400; /* Darker orange on hover */
        }

    .quantity-selector {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .quantity-selector label {
            font-size: 16px;
            margin-right: 10px;
            font-weight: bold;
        }

    .quantity-box {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .qty-btn {
        background-color: white;
        border: none;
        padding: 10px;
        font-size: 18px;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-right: 1px solid #ccc;
    }

        .qty-btn.plus {
            border-left: 1px solid #ccc;
        }

    .quantity-box input {
        text-align: center;
        width: 40px;
        height: 40px;
        border: none;
        font-size: 16px;
        color: #e74c3c;
        font-weight: bold;
        pointer-events: none;
    }

    .product-description {
        margin-top: 20px; /* Adjust spacing */
        font-size: 16px;
        color: #333;
        line-height: 1.6; /* Improved readability */
    }

    .detailed-description {
        margin-top: 20px;
    }
    .btn-cart {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

        .btn-cart:hover {
            background-color: #e65c00;
        }
</style>

<div class="container">
    <!-- Product Detail Section -->
    <div class="product-detail">
        <!-- Product Image -->
        <div class="product-image">
            <a href="~/Sach/SuaHinh"><img src="~/Hinh/@ViewBag.list[0][5]" alt="Product Image"></a>
        </div>

        <!-- Product Information -->
        <div class="product-info">
            <h1>@ViewBag.list[0][1]</h1>

            <div class="price-section">
                <span class="current-price">@String.Format("{0:N0} VNĐ", Convert.ToDecimal(ViewBag.list[0][3]))</span>
            </div>

            <!-- Book Details Section -->
            <div class="info-section">
                <strong>Mã sách:</strong> @ViewBag.list[0][0]
            </div>
            <div class="info-section">
                <strong>Số lượng tồn:</strong> @ViewBag.list[0][11]
            </div>
            <div class="info-section">
                <strong>Tên chủ đề:</strong> @ViewBag.list[0][12]
            </div>
            <div class="info-section">
                <strong>Tên tác giả:</strong> @ViewBag.list[0][13]
            </div>
            <div class="info-section product-description">
                <strong>Mô tả sản phẩm:</strong> @ViewBag.list[0][4]
            </div>

            <!-- Remove and Edit -->
            <div class="actions">
                <a href="~/Sach/Edit?id=@ViewBag.list[0][0]" class="btn-cart">Sửa</a>

                <!-- Xóa button -->
                <a href="~/Sach/XoaSach?id=@ViewBag.list[0][0]" class="btn-cart">Xóa</a>
            </div>
        </div>
    </div>
</div>


